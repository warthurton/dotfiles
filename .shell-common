function pubgit() {
  git --git-dir="$HOME/.git-pub-dotfiles" --work-tree="$HOME" "$@"
}

function prvgit() {
  git --git-dir="$HOME/.git-prv-dotfiles" --work-tree="$HOME" "$@"
}

